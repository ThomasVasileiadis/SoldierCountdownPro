<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/camouflage_main"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextHH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        android:hint="HH"
        android:layout_weight=".25"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/editTextMM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        android:hint="MM"
        android:layout_weight=".25"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/personalPhoto"
        android:layout_width="220dp"
        android:layout_height="240dp"
        android:background="@drawable/frame"
        app:srcCompat="@android:drawable/divider_horizontal_bright" />


    <ImageView
        android:id="@+id/frame"
        android:layout_width="184dp"
        android:layout_height="165dp"
        android:layout_alignRight="@id/personalPhoto"
        android:layout_alignBottom="@+id/personalPhoto"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/photo_frame"
        app:srcCompat="@android:drawable/divider_horizontal_bright" />

    <ImageView
        android:id="@+id/timer"
        android:layout_width="177dp"
        android:layout_height="177dp"
        android:layout_alignLeft="@id/personalPhoto"
        android:layout_marginLeft="234dp"
        android:background="@drawable/timer"
        app:srcCompat="@android:drawable/divider_horizontal_bright" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="530dp"
        android:layout_alignRight="@id/personalPhoto"
        android:layout_alignBottom="@+id/personalPhoto"
        android:layout_marginRight="-191dp"
        android:layout_marginBottom="-452dp"
        android:background="@drawable/note"
        android:rotation="-10" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="134dp"
        android:layout_height="178dp"
        android:layout_alignLeft="@id/personalPhoto"
        android:layout_marginLeft="256dp" />


    <ImageView
        android:layout_width="186dp"
        android:layout_height="155dp"
        android:layout_alignRight="@+id/personalPhoto"
        android:layout_alignBottom="@+id/personalPhoto"


        android:layout_marginRight="-156dp"
        android:layout_marginBottom="-123dp"
        android:background="@drawable/chain" />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/countDownView"
        android:layout_width="221dp"
        android:layout_height="31dp"
        android:layout_alignRight="@+id/personalPhoto"
        android:layout_alignBottom="@+id/personalPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="-97dp"
        android:layout_marginBottom="-181dp"
        android:rotation="-10"
        app:isHideTimeBackground="true"
        app:isShowDay="true"
        app:isShowHour="true"
        app:isShowMillisecond="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isTimeTextBold="true"
        app:suffixGravity="bottom"
        app:suffixDay="d"
        app:suffixHour="h"
        app:suffixMillisecond="ms"
        app:suffixMinute="m"
        app:suffixSecond="s"
        app:suffixTextColor="#000000"
        app:suffixTextSize="20sp"
        app:timeTextColor="#000000"
        app:timeTextSize="22sp" />





</RelativeLayout>